-# record_form.haml

%form{ :action => url(action), :method => 'POST', :role => 'form', :class => 'form-horizontal'}

  %div
    %input{ :type => 'hidden', :name => 'oclc_symbol', :value => INSTITUTIONS[session[:registry_id].to_i]['symbol'] }

  %div
    %input{ :type => 'hidden', :name => 'oclc_number', :value => @data['id'] }
    
  %div{ :class => 'form-group'}
    %label{ :for=>'title', :class=>'col-sm-2 control-label' } Title
    %div{ :class=>'col-sm-10' }
      %input{ :type => 'text', :id => 'title', :name => 'title', :value => @data['title'], :size => 40, :class => 'form-control' }

  %div{ :class => 'form-group'}
    %label{ :for=>'subtitle', :class=>'col-sm-2 control-label' } Sub-title
    %div{ :class=>'col-sm-10' }
      %input{ :type => 'text', :name => 'subtitle', :value => @data['subtitle'], :size => 40, :class => 'form-control' }

  %div{ :class => 'form-group'}
    %label{ :for=>'author', :class=>'col-sm-2 control-label' } Author
    %div{ :class=>'col-sm-10' }
      %input{ :type => 'text', :name => 'author', :value => @data['author'], :size => 40, :class => 'form-control' }
      
  %div{ :class => 'form-group'}
    %label{ :for=>'publisher', :class=>'col-sm-2 control-label' } Published by
    %div{ :class=>'col-sm-10' }  
      %input{ :type => 'text', :name => 'publisher', :value => @data['publisher'], :size => 40, :class => 'form-control' }

  %div{ :class => 'form-group'}
    %label{ :for=>'extent', :class=>'col-sm-2 control-label' } Physical Description
    %div{ :class=>'col-sm-10' }  
      %input{ :type => 'text', :name => 'extent', :value => @data['extent'], :size => 40, :class => 'form-control' }
      
  %div{ :class => 'form-group'}
    %label{ :for=>'subject', :class=>'col-sm-2 control-label' } Topic
    %div{ :class=>'col-sm-10' } 
      %input{ :type => 'text', :name => 'subject', :value => @data['subject'], :size => 40, :class => 'form-control' }
      
  %div{ :class => 'form-group'}
    %div{ :class => 'col-sm-offset-2 col-sm-10'}
      %button{ :type => 'submit', :class => 'btn btn-success' } Save